@model List<TestConsumeWebApi.ApiDTO.Patient>

<a href="/Patient" class="btn btn-primary">Go Back</a>

<div style="margin-top:5%">
    <form href="/Patient/AddPatient" method="post">
        <div class="form-group">
            <label for="Id" class="col-sm-2">Id</label>
            <input class="form-control" name="Id" required />
        </div>
        <div class="form-group">
            <label for="FirstName" class="col-sm-2">First Name</label>
            <input class="form-control" name="FirstName" maxlength="50" required />
        </div>
        <div class="form-group">
            <label for="LastName" class="col-sm-2">Last Name</label>
            <input class="form-control" name="LastName" required maxlength="50"/>
        </div>
        <div class="form-group">
            <label for="DateOfBirth" class="col-sm-2">Date of birth</label>
            <input type="date" class="form-control" name="DateOfBirth" required />
        </div>
        <div class="panel-body">
            <button type="submit" class="btn btn-primary">Add</button>

        </div>
    </form>

    @if (Model != null)
    {
        <h2>Patient with below details added</h2>
        <table class="table table-striped table-bordered ">
            <thead><tr><th>Id</th><th>First Name</th><th>Last Name</th><th>Date of birth</th>></tr></thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.DateOfBirth.Date</td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
